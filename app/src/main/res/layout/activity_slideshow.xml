<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bivaca.familyhub.photos.SlideshowActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/photos_loading_layout"
        android:gravity="center_vertical"
        android:padding="@dimen/default_view_padding">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/photos_loading_text"
            android:text="@string/loading_text"
            android:textAlignment="center"
            android:textSize="@dimen/default_text_size"/>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/photos_loading_progress"
            android:paddingTop="@dimen/default_view_padding"
            android:theme="@style/Theme.AppCompat"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/photos_loading_error_layout"
        android:gravity="center_vertical"
        android:padding="@dimen/default_view_padding">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/no_photos_available"
            android:text="@string/no_photos_available_text"
            android:textAlignment="center"
            android:textSize="@dimen/default_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/photos_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/photo_time_description"
            android:textSize="@dimen/default_text_size"
            android:padding="@dimen/default_text_padding"
            android:background="#000"
            android:textAlignment="center"
            android:visibility="gone"
            android:textColor="#fff"/>
        <ImageView
            android:id="@+id/photos_main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"/>
    </LinearLayout>

</LinearLayout>
