<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/inbox_layout"
    tools:context=".messages.InboxActivity">
    <Button
        android:id="@+id/back_button"
        style="@style/LargeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_main_button"
        android:onClick="showPreviousActivity"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unread_state"
        android:textSize="@dimen/message_view_metadata_font_size"
        android:paddingLeft="@dimen/message_view_metadata_padding"
        android:paddingRight="@dimen/message_view_metadata_padding"
        android:background="@drawable/unread_state_background"
        android:text="@string/message_unread_text"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/message_sender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/message_view_text_font_size"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/message_view_metadata_padding"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/replied_state"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_check_circle_black_24dp"
            android:padding="@dimen/message_view_metadata_padding"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/message_datetime_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/message_view_metadata_font_size"
        android:paddingLeft="@dimen/message_view_metadata_padding"
        android:paddingRight="@dimen/message_view_metadata_padding"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/message_body_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/message_view_text_font_size"
            android:padding="@dimen/message_view_padding" />
    </ScrollView>
    <Button
        android:id="@+id/reply_button"
        style="@style/LargeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/reply_button_text"
        android:onClick="showReplyActivity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">
        <Button
            android:id="@+id/select_earlier_message_button"
            style="@style/LargeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/show_earlier_message_button"
            android:onClick="previewEarlierMessage"/>
        <Button
            android:id="@+id/select_later_message_button"
            style="@style/LargeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/show_later_message_button"
            android:onClick="previewLaterMessage"/>
    </LinearLayout>

</LinearLayout>