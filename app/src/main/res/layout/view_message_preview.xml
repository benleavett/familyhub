<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_sender_text"
            android:textSize="@dimen/preview_metadata_font_size"
            android:padding="@dimen/message_preview_padding"
            android:text="Ben"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_datetime_text"
            android:textSize="@dimen/preview_metadata_font_size"
            android:padding="@dimen/message_preview_padding"
            android:text="(2 days ago)"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_preview_text"
        android:textSize="@dimen/preview_text_font_size"
        android:padding="@dimen/message_preview_padding"
        android:text="Hi Grandma, we're..."/>
</LinearLayout>