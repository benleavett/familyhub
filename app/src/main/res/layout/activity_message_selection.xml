<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:keepScreenOn="true"
    tools:context=".messages.MessageSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/back_button"
            style="?metaButtonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/button_default_font_size"
            android:text="@string/back_button"
            android:background="@drawable/basic_button"
            android:onClick="showPreviousActivity"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/message_body_view"
            android:layout_weight="1"
            android:layout_below="@id/back_button">
            <include layout="@layout/message_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/message_body_view">

            <Button
                android:id="@+id/select_earlier_message_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/button_default_font_size"
                android:text="@string/show_earlier_message_button"
                android:background="@drawable/basic_button"
                android:onClick="previewEarlierMessage"/>

            <Button
                android:id="@+id/select_later_message_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/button_default_font_size"
                android:text="@string/show_later_message_button"
                android:background="@drawable/basic_button"
                android:onClick="previewLaterMessage"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>